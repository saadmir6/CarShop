<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Car Managment System</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <style>
        .nav-link {
            color: #FED766;
            font-size:large;
       
        }
    </style>

</head>

<body>

    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid ">

            <a class="navbar-brand text-warning p-4 fs-4" href="@Url.Action("Index", "Home")">CarShop</a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse " id="navbarNav">
                <ul class="navbar-nav ">

                    <li class="nav-item">
                        <a class="nav-link  mx-5" aria-current="page" href="@Url.Action("Shop", "CarShop")">Shop</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link mx-5" href="@Url.Action("Sell", "CarShop")">Sell</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link  mx-5" href="@Url.Action("ServiceTable", "ServiceData")">Service</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link  mx-5" href="@Url.Action("Stores", "Stores")">Stores</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link  mx-5" href="@Url.Action("Careers", "CarShop")">Careers</a>
                    </li>

                </ul>
            </div>
        </div>
    </nav>



    @*class="container body-content"*@
    <div>
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Car Shop</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
