@model  List<CarManagmentSystem.Models.Cars>

@{
    ViewBag.Title = "Home Page";
}



<link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/MyCSS/IndexStylesheet.css")" media="screen">

<style>
    .serive_p {
        padding: 80px;
        color: aliceblue;
        background-color: chartreuse;
    }

